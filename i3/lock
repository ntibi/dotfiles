#!/bin/bash

IMAGE="$(mktemp).png"

scrot -z $IMAGE

case $1 in
    "pixelated")
        convert $IMAGE -scale 10% -scale 1000% $IMAGE
        i3lock -u -i $IMAGE
        ;;
    "blurred")
        convert $IMAGE -filter Gaussian -resize 20% -define filter:sigma=1.5 -resize 500% $IMAGE
        i3lock -u -i $IMAGE
        ;;
    "seamless")
        i3lock -p win -u -i $IMAGE
        ;;
esac

rm $IMAGE
